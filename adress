class Field:
    def __init__(self, value=None):
        self.value = value


class Address(Field):
    def __init__(self, city, street):
        self.city = city
        self.street = street
        super().__init__(f"{city}, {street}")
        self.validate()

    def validate(self):
        if not isinstance(self.street, str):
            raise ValueError("Назва вулиці має бути рядком.")

        if len(self.street.strip()) < 5:
            raise ValueError("Назва вулиці занадто коротка.")

        if not any(char.isdigit() for char in self.street):
            raise ValueError("Адреса має містити номер будинку (наприклад, 'вул. Шевченка 10').")

    def __str__(self):
        return f"{self.city}, {self.street}"


def main():
    allowed_cities = ["Київ", "Львів", "Одеса", "Харків", "Дніпро"]

    print("Оберіть місто зі списку:")
    for idx, city in enumerate(allowed_cities, 1):
        print(f"{idx}. {city}")

    try:
        choice = int(input("Введіть номер міста зі списку: ").strip())
        if not (1 <= choice <= len(allowed_cities)):
            raise ValueError("Невірний вибір міста.")
        city = allowed_cities[choice - 1]
    except Exception as e:
        print("Помилка:", e)
        return

    street = input("Введіть вулицю та номер (наприклад, 'вул. Шевченка 10'): ").strip()

    try:
        address = Address(city, street)
        print("Збережено адресу:", address)
    except ValueError as e:
        print("Помилка:", e)


if __name__ == "__main__":
    main()
